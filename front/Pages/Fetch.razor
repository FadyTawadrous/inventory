@page "/fetch"
@inject HttpClient Http
@inject UsersStateService UsersStateService
@inject ProductsStateService ProductsStateService

@implements IDisposable

<h3>Products</h3>

@if (ProductsStateService.Products == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in ProductsStateService.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}

<h3>Users</h3>

<button @onclick="FetchUsers">Fetch Users</button>

@if (isLoading)
{
    <p><em>Loading users...</em></p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="error">@errorMessage</div>
}
else if (UsersStateService.Users != null)
{
    <ul>
        @foreach (var user in UsersStateService.Users)
        {
            <li>@user.Name (@user.Age)</li>
        }
    </ul>
}
else
{
    <p>No users found.</p>
}


