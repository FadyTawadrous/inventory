    public void Dispose()
    {
        // VERY IMPORTANT: Unsubscribe to prevent memory leaks
        ProductsStateService.OnChange -= StateHasChanged;
        UsersStateService.OnChange -= StateHasChanged;
    }
    
    protected override async Task OnInitializedAsync()
    {
        ProductsStateService.OnChange += StateHasChanged;
        UsersStateService.OnChange += StateHasChanged;
        try
        {
            var retrievedProducts = await Http.GetFromJsonAsync<List<Product>>("http://localhost:5113/products");
            ProductsStateService.UpdateProducts(retrievedProducts);
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error fetching products: {ex.Message}");
        }
    }

    // Fetch Users Section
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private CancellationTokenSource? cts;

    private async Task FetchUsers()
    {
        //users = null; // Reset users list
        isLoading = true;
        errorMessage = string.Empty;
        StateHasChanged();

        cts?.Cancel(); // Cancel any previous request
        cts = new CancellationTokenSource();
        var token = cts.Token;

        try
        {
            await Task.Delay(2000, token); // Simulate a delay
            var retrievedUsers = await Http.GetFromJsonAsync<List<User>>("http://localhost:5113/users", token);
            Console.WriteLine("request completed successfully.");
            errorMessage = string.Empty;
            UsersStateService.UpdateUsers(retrievedUsers);
            // https://jsonplaceholder.typicode.com/users?_limit=1
        }
        catch (TaskCanceledException)
        {
            errorMessage = "Request was canceled. Please wait a moment";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error fetching users: {ex.Message}";
        }
        finally
        {
            //cts?.Dispose();
            isLoading = false;
            StateHasChanged();
        }
    }

}